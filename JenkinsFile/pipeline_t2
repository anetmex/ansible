    stages {

        stage ("Ansible") {
            steps {
                ansiblePlaybook(
                    credentialsId: 'ec2-user',
                    disableHostKeyChecking: true,
                    installation: 'Ansible',
//                    inventory: '/etc/ansible/hosts',
                    playbook: '/var/lib/jenkins/workspace/simpe-rest-client/ansible/playbook.yml',
//                    sudo: true
                    )

//                become(true)
//                becomeUser("user")
            }
        }
    }
}